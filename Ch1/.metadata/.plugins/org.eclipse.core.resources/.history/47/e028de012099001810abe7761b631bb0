#include <stdio.h>

int main() {
	printf("HUH");
	FILE *fp = fopen("T:\\take\\CProgrammingLanguageRnK2ndEd\\Ch1\\1-12\\test.txt", "r");
	if (fp == NULL) {
		perror("Error in opening file - taking keyboard inputs instead");
		int c = 0;
		while ((c = getchar()) != EOF) {
			printf("%c", c);
			if (c == '\t' || c == ' ') {
				printf("\n");
			}
		}
		printf("\n\nwe done!");
		getchar();
		return 0;
	}
	printf("LOL");
	char* buff = 0;
	while (fscanf(fp, "%s", buff) != EOF) {
		printf("%s\n", &buff);
	}
	printf("\n\nwe done!");
	return 0;
}
